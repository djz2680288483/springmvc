<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.djz.dao.BookMapper">

    <insert id="addBook" parameterType="books">
        insert into books (bookName,price,bookCount,author) values
        (#{bookName},#{price},#{bookCount},#{author});
    </insert>

    <update id="updateBookById" parameterType="books">
        update   books
        set bookName=#{bookName},price=#{price},bookCount=#{bookCount},author=#{author}
        where bookId=#{bookId};
    </update>

    <delete id="deleteBookById" parameterType="int">
        delete from books where bookId=#{bookId};
    </delete>

    <select id="selectBookById" parameterType="int" resultType="books">
        select  * from  books where bookId=#{bookId};
    </select>

    <select id="selectAllBooks" resultType="books">
        select  * from  books;
    </select>


</mapper>
 
